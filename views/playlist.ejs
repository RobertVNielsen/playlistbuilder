<!DOCTYPE html>
<html>
    <head>
        <% include ../views/includes/header.ejs %>   
    </head>

    <body>
        <nav>
            
            <div class="welcome">
                <div class="back"><a href="/allplaylists">Back to Playlists</a></div>
                <div class="playlistbuilder">Playlist Builder</div>
                <form class="logout" action="/login/logout" method="POST">
                    <button type="submit">Log out</button>
                </form>
            </div>

        </nav>

        
        
        <div class="playlistPage">

            <table class="playlists">
                <caption>
                    <%= playlist.title %>
                    <form class="share" action="/share/<%= playlist._id %>" method="GET">
                        <button type="submit">Share Playlist</button>
                    </form>
                </caption>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th></th>
                </tr>
                <% for (var i = 0; i < songs.length; i++) { %>
                    <tr>
                        <td><%= songs[i].title %></td>
                        <td><%= songs[i].artist %></td>
                        <td>
                            <form action="/playlist/delete-song/<%= playlist._id %>" method="POST">
                                <input type="hidden" name="deleteID" value="<%= songs[i]._id %>">
                                <button type="submit" class="delete">X</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </table>
            
            <form action="/playlist/<%= playlist._id %>" class="add" method="POST">
                <input type="text" name="title" id="title" placeholder="Title" required><br /><br />
                <input type="text" name="artist" id="artist" placeholder="Artist" required><br /><br />
                <button type="submit">Add Song</button>
                <!--
                <br /><br />
                <div>
                    <label for="title">Title</label><br>
                    <input type="text" name="title" id="title">
                </div>
                <div>
                    <label for="artist">Artist</label><br>
                    <input type="text" name="artist" id="artist">
                </div>
                <div>
                    <input type="hidden" value="">
                    <button type="submit">Add Song</button>
                </div>
                -->
            </form>
        </div>
        
        <br />
        <br />
    </body>
</html>